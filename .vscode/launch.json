{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "プログラムの起動",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\dist\\main.js",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "node-terminal",
      "name": "スクリプトの実行: debug",
      "request": "launch",
      "command": "bun run debug",
      "cwd": "${workspaceFolder}"
    }
  ]
}
